page {
  /* background-image: linear-gradient(120deg, #84fab0 0%, #8fd3f4 100%); */
  background-image: linear-gradient(to top, #a8edea 0%, #fed6e3 100%);
}

.header {
  width: 100%;
  height: 500rpx;
  margin-top: 20%;
}

.header image {
  height: 70%;
  display: block;
  margin: 0 auto;
}

.footer {
  width: 100%;
  height: 200px;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
}

.footer text {
  display: block;
  font-size: 30px;
  margin: 10px;
  text-align: center;
  font-weight: bold;
}

.footer .text1 {
  color: rgb(214, 124, 71);
  font-size: 50rpx;
}

.footer .van-button {
  width: 300rpx;
  font-size: 35rpx;
}

.footer .register {
  width: 100%;
  height: 50px;
  font-size: 35rpx;
  line-height: 50px;
  text-align: center;
}

.footer .register text {
  font-size: 35rpx;
  color: rgb(48, 48, 253);
  display: inline-block;
}