<!-- 用户详细页 -->
<!-- 头部图表区 -->
<view class="header">
  <canvas id="canvas" type="2d"></canvas>
</view>
<!-- 表单主体 -->
<van-cell-group inset>
  <van-cell title="头像" center>
    <view class="avatar-container">
      <image src="../../images/avatar.png" mode="widthFix|heightFix" class="avatar" />
    </view>
  </van-cell>
  <van-cell title="用户名称" value="admin" center></van-cell>
  <van-field label="用户昵称" value="{{ userInfo.nickname }}" placeholder="用户昵称" bind:blur="formNicknameChange" id="nickname" border="false" input-align="right" />
  <van-field label="手机号码" value="{{ userInfo.phone }}" placeholder="手机号码" bind:blur="formNicknameChange" id="phone" border="false" input-align="right" />
  <van-cell title="性别" value="{{ sexColumns[sexIndex] }}" center is-link bind:click="showPopup"></van-cell>
  <van-field label="邮箱" value="{{ userInfo.email }}" placeholder="邮箱" bind:blur="formNicknameChange" id="email" border="false" input-align="right" />
</van-cell-group>
<!-- 按钮部分 -->
<view class="bottom">
  <van-button type="primary" round icon="star-o" bind:click="clickHandler">确认修改</van-button>
  <van-button type="warning" round icon="setting-o">重置信息</van-button>
</view>
<!-- 性别选择器弹出层 -->
<van-popup show="{{ showPop }}" bind:close="closePopup" custom-style="height: 40%;" position="bottom" close-icon="close" round>
  <van-picker show-toolbar title="性别" columns="{{ sexColumns }}" default-index="{{ 0 }}" bind:confirm="onConfirmSex" />
</van-popup>